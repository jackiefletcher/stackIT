<h1><%= @question.ask %></h1>

<br>
<h3>Answers</h3>
<div id="responses">
  <%= render 'responses', question: @question %>
</div>

<%= form_for [@question, @response], remote: true, class:"form-horizontal" do |f| %>
  <%= f.label :answer, class:"form-label" %>
  <%= f.text_field :answer, class:"form-control" %>
<br>
  <%= f.submit "AnswerIT", class: ['btn-warning', 'btn'] %>
<% end %>
