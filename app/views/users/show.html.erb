
<h4>Your Questions</h4>
<% @user.questions.each do |q|%>
  <ul>
    <li><%= q.ask %></li>
      <% q.responses.each do |r| %>
        <ul>
          <li><%= r.answer %> |
            <% unless r.best %>
              <%= link_to 'Bestify', question_response_path(q, r, response: {best: true}), data: {method: "patch"}, id: "response-id-#{r.id}"   %></li>
            <% else %>
              Best Answer
            <% end %>
        </ul>
      <% end %>
  </ul>
<% end %>


<h4>Your Reponses</h4>
<% @user.responses.each do |r|%>
  <ul>
    <li>Question: <%= r.question.ask %></li>
    <p>Response: <%= r.answer %><p>
  </ul>
<% end %>
